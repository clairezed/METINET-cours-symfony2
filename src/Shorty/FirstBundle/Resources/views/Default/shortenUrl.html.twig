{% extends '::base.html.twig' %}
{% if form is defined %}
   {% form_theme form 'ShortyFirstBundle:Form:fields.html.twig' %}
{% endif %} 

{% block body %}
<div class="container">
	<h1>
		Hello again !
	</h1>
	<form class="form-horizontal" action="{{path('shorten')}}" method="post" {{ form_enctype(form) }}>
			{{form_errors(form)}}
			<div class="form-group">
				{{form_label(form.originalUrl)}}
				<div class="col-sm-9">
				{{form_errors(form.originalUrl)}}
				{{form_widget(form.originalUrl)}}
				</div>
			</div>
			<div class="form-group">
				{{form_label(form.slug)}}
				
				<div class="col-sm-9">
				{{form_errors(form.slug)}}
				{{form_widget(form.slug)}}
				</div>
			</div>
			<input type="submit" class="btn btn-primary col-sm-offset-2"/>
			{{form_rest(form)}}
	</form>
</div>

{% endblock %}